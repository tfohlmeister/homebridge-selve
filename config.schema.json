                "required": true
            },
            "port": {
                "title": "USB Port",
                "description": "Device path to Selve USB-RF module (e.g. /dev/tty.USB0)",
                "type": "string",
                "required": true
            },
            "device": {
                "title": "Device Number",
                "description": "Device number set during pairing",
                "type": "integer",
                "required": true,
                "default": 0,
                "minimum": 0,
                "maximum": 63
            }
        }
    },
    "form": null,
    "display": null
